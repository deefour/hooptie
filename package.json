{
  "name": "hooptie",
  "version": "1.0.0",
  "description": "A Vue.js & Firebase application to make tracking used car listings easier.",
  "main": "src/index.pug",
  "scripts": {
    "clean": "yarn del-cli {dist,.cache}",
    "build": "yarn clean && yarn parcel build src/index.pug src/firebase-messaging-sw.js; cp _redirects dist/",
    "watch": "yarn parcel serve src/index.pug src/firebase-messaging-sw.js",
    "format": "yarn prettier --write './*.{js,json}' './{src,functions}/**/*.{js,ts,css,json,vue}'",
    "check": "yarn tsc --noEmit --project .",
    "lint": "yarn check && yarn eslint . --ext .ts",
    "deploy:rules": "firebase deploy --only firestore:rules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deefour/hooptie.git"
  },
  "keywords": [
    "deefour",
    "hooptie",
    "autolist",
    "autotrader",
    "firebase",
    "firestore"
  ],
  "author": "Jason Daly <jason@deefour.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/deefour/hooptie/issues"
  },
  "homepage": "https://hooptie.deefour.me",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.2.0",
    "@vue/component-compiler-utils": "^3.1.2",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^5.0.2",
    "autoprefixer": "^9.8.0",
    "components": "^0.1.0",
    "del-cli": "^3.0.1",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^6.2.2",
    "husky": "^4.2.5",
    "parcel-bundler": "^1.12.4",
    "postcss-nested": "^4.2.1",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "pug": "^3.0.0",
    "tslint": "^6.1.2",
    "typescript": "^3.9.3",
    "vue-hot-reload-api": "^2.3.4",
    "vue-template-compiler": "^2.6.11"
  },
  "dependencies": {
    "@bugsnag/js": "^7.1.1",
    "@bugsnag/plugin-vue": "^7.1.1",
    "@fortawesome/fontawesome-svg-core": "^1.2.28",
    "@fortawesome/free-solid-svg-icons": "^5.13.0",
    "@fortawesome/vue-fontawesome": "^0.1.9",
    "babel-polyfill": "^6.26.0",
    "firebase": "^7.14.4",
    "tailwindcss": "^1.4.6",
    "vue": "^2.6.11",
    "vue-router": "^3.3.2",
    "vuex": "^3.4.0"
  }
}
